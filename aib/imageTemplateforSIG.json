        "userIdentity": "enabled"
            },
        "identity": {
            "type": "UserAssigned",
                    "userAssignedIdentities": {
                    "/subscriptions/8ae4f1ad-5738-40b4-bf47-dec771721337/resourcegroups/az-gnva-image/providers/Microsoft.ManagedIdentity/userAssignedIdentities/aibBuiUserId1614682870": {}
                        
                }
                },
    
    "properties": {

        "buildTimeoutInMinutes" : 80,

        "vmProfile": 
