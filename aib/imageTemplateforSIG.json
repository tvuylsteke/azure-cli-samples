                        "echo \"**\" | sudo tee -a /etc/motd",
                        "echo \"**\" | sudo tee -a /etc/motd",
                        "echo \"**************************************************************************\" | sudo tee -a /etc/motd"
                ]
            },
            {
                "type": "Shell",
                "name": "InstallUpgrades",
                "inline": [
                    "sudo apt install unattended-upgrades"
                ]
            }
        ],
        "distribute": 
        [
            {   
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/8ae4f1ad-5738-40b4-bf47-dec771721337/resourceGroups/az-gnva-image/providers/Microsoft.Compute/galleries/g_nva_gallery/images/g_nva",
